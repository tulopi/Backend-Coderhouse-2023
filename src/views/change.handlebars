<form action="api/sessions/change" method="post">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" data-id="email">
    </div>
    <div class="form-group">
        <label for="password">New password:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password"
            data-id="password">
    </div>
    <button type="submit" class="btn btn-primary">Restore password</button>
</form>