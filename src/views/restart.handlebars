<!-- Estilos personalizados para el formulario de reinicio de contraseÃ±a -->
<style>
    .restart-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 4rem;
    }

    .restart-card {
        max-width: 400px;
        margin-bottom: 1rem;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f8f9fa; /* Fondo de la tarjeta */
    }

    .card-body {
        padding: 1.25rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        border: 1px solid #ced4da;
    }

    .btn-primary {
        background-color: #343a40;
        color: #ffffff;
        border: 1px solid #343a40;
    }

    .btn-primary:hover {
        background-color: #1d2124;
        border: 1px solid #1d2124;
    }
</style>

<div class="restart-container">
    <div class="card restart-card">
        <div class="card-body">
            <p class="card-text">Enter your new password below.</p>
            <form class="restart-form" action="/api/sessions/restart/{{id}}" method="post">
                <div class="form-group">
                    <label for="pass">Password:</label>
                    <input type="password" class="form-control" id="pass" name="pass" placeholder="Enter your new password" data-id="pass">
                </div>
                <div class="form-group">
                    <label for="repeat">Repeat password:</label>
                    <input type="password" class="form-control" id="repeat" name="repeat" placeholder="Repeat your new password" data-id="repeat">
                </div>
                <button type="submit" class="btn btn-primary">Restore password</button>
            </form>
        </div>
    </div>
</div>
