<form action="api/sessions/login" method="post">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" data-id="email">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password"
            data-id="password">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
    <button class="btn btn-secondary" onclick="location.href='/api/sessions/auth/github'">Login with github</button>