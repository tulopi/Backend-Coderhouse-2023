<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Chat</h4>
            <h3 id="email" class="card-subtitle mb-2">User</h3>
        </div>
        <div class="card-body" id="chat-messages">
            <div class="message sender">
                <div>
                    <div class="sender-name">Connected</div>
                </div>
                <div id="chat" class="card-text">Cargando mensajes...</div>
            </div>
        </div>
        <form id="chatform" class="card-footer">
            <div class="row">
                <div class="col-8">
                    <input type="text" name="message" id="message" class="form-control" placeholder="Type your message...">
                </div>
                <div class="col-2">
                    <button id="sendMessage" class="btn btn-primary btn-block"><i class="fas fa-paper-plane"></i> Send</button>
                </div>
                <div class="col-2">
                    <button id="clearChat" class="btn btn-danger btn-block"><i class="fas fa-trash"></i> Clear chat</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>